<Project>

  <PropertyGroup>
    <_BuildConstantsTaskAssembly Condition="'$(_BuildConstantsTaskAssembly)' == ''">$(MSBuildThisFileDirectory)..\tasks\netstandard2.0\BuildConstants.dll</_BuildConstantsTaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="BuildConstants.GenerateBuildConstantsTask"
             AssemblyFile="$(_BuildConstantsTaskAssembly)" />

  <!--
    Auto-populate Constant items from well-known MSBuild properties.
    These are appended after any user-defined Constant items.
    To exclude a specific default constant, add a target that runs
    AfterTargets="PopulateBuildConstants" and removes the unwanted items:

      <Target Name="_ExcludeBuildConstants" AfterTargets="PopulateBuildConstants">
        <ItemGroup>
          <Constant Remove="Configuration" />
        </ItemGroup>
      </Target>
  -->

  <Target Name="PopulateBuildConstants"
          BeforeTargets="GenerateBuildConstants"
          Condition="'$(EnableDefaultConstantItems)' != 'false'">
    <ItemGroup>
      <Constant Include="AssemblyName"         Value="$(AssemblyName)"         Condition="'$(AssemblyName)' != ''" />
      <Constant Include="AssemblyVersion"      Value="$(AssemblyVersion)"      Condition="'$(AssemblyVersion)' != ''" />
      <Constant Include="FileVersion"          Value="$(FileVersion)"          Condition="'$(FileVersion)' != ''" />
      <Constant Include="InformationalVersion" Value="$(InformationalVersion)" Condition="'$(InformationalVersion)' != ''" />
      <Constant Include="Version"              Value="$(Version)"              Condition="'$(Version)' != ''" />
      <Constant Include="Product"              Value="$(Product)"              Condition="'$(Product)' != ''" />
      <Constant Include="Company"              Value="$(Company)"              Condition="'$(Company)' != ''" />
      <Constant Include="Copyright"            Value="$(Copyright)"            Condition="'$(Copyright)' != ''" />
      <Constant Include="Description"          Value="$(Description)"          Condition="'$(Description)' != ''" />
      <Constant Include="Configuration"        Value="$(Configuration)"        Condition="'$(Configuration)' != ''" />
    </ItemGroup>
  </Target>

  <Target Name="GenerateBuildConstants"
          BeforeTargets="CoreCompile"
          DependsOnTargets="PopulateBuildConstants">

    <PropertyGroup>
      <_BuildConstantsOutputPath>$(IntermediateOutputPath)$(BuildConstantsTypeName).g.cs</_BuildConstantsOutputPath>
    </PropertyGroup>

    <GenerateBuildConstantsTask
      Constants="@(Constant)"
      Namespace="$(RootNamespace)"
      TypeName="$(BuildConstantsTypeName)"
      OutputPath="$(_BuildConstantsOutputPath)"
      Language="$(Language)">
      <Output TaskParameter="GeneratedFilePath" PropertyName="_BuildConstantsGeneratedFile" />
    </GenerateBuildConstantsTask>

    <ItemGroup Condition="Exists('$(_BuildConstantsGeneratedFile)')">
      <Compile Include="$(_BuildConstantsGeneratedFile)" />
    </ItemGroup>

  </Target>

</Project>
